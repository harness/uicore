{
  "name": "uicore-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Harness UICore Monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "lerna publish",
    "build": "lerna run build",
    "lint": "eslint \"./packages/**/src/**/*.{ts,tsx}\" && stylelint ./packages/**/src && prettier --check \"./packages/**/src/**/*.{ts,tsx,css}\"",
    "test": "jest --no-cache ./packages/**/src",
    "fmt": "prettier --write \"./packages/**/src/**/*.{ts,tsx,css}\"",
    "setup": "bash scripts/github-package-registry.sh",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "do-puppeteer-storyshots": "./node_modules/.bin/jest --projects=./storyshots-puppeteer",
    "prepare": "husky install",
    "puppeteer-storyshots": "yarn run build-storybook && yarn run do-puppeteer-storyshots"
  },
  "license": "UNLICENSED",
  "repository": "https://github.com/harness/uicore",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.3.1",
    "@storybook/addon-docs": "^6.3.1",
    "@storybook/addon-essentials": "^6.3.1",
    "@storybook/addon-links": "^6.3.1",
    "@storybook/addon-storyshots": "^6.3.6",
    "@storybook/addon-storyshots-puppeteer": "^6.3.6",
    "@storybook/builder-webpack5": "^6.3.1",
    "@storybook/manager-webpack5": "^6.3.1",
    "@storybook/react": "^6.3.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.2",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-image-snapshot": "^4.5.1",
    "jest-junit": "^12.0.0",
    "lerna": "^5.0.0",
    "lint-staged": "^10.5.3",
    "postcss": "^8.3.5",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^6.1.0",
    "postcss-mixins": "^8.1.0",
    "postcss-nested": "^5.0.3",
    "prettier": "^2.2.1",
    "puppeteer": "^10.1.0",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended": "^3.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "resolutions": {
    "@babel/core": "7.14.6",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "postcss": "8.3.5"
  },
  "lint-staged": {
    "*": [
      "scripts/license/stamp.sh"
    ],
    "src/**/*.{js,jsx}": [
      "sh -c 'exit 1'"
    ],
    "*.{ts,tsx},!docs/**/*": [
      "eslint",
      "prettier --check",
      "sh scripts/typecheck-staged.sh"
    ],
    "*.css": [
      "prettier --check",
      "stylelint"
    ]
  }
}
